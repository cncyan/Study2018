/* components/person/index.wxss */
.percontainer{
  width: 100%;
  overflow: hidden;
  height: auto;
  display: flex;
  padding:0.5rem;
  box-sizing: border-box;
}
.pericon{
  height:2.5rem;
  width: 2.5rem;
  margin-right: 1rem;
}
.persaycon{
  display: flex;
  flex-flow: column;
  max-width: 60%;
}
.pername{
  font-size: 0.7rem;
  color:#999
}
.perjob{
  font-size: 0.6rem;
  color:#ddd;
  margin-left: 0.3rem;
}
.persay{
  font-size: 0.7rem;
  color:#333;
  margin-top:0.2rem;
  box-shadow: 0 0 0.1rem 0.1rem #eee;
  padding:0.5rem;
  word-break: break-all
}
.tag{
    position:relative;
    border-radius: 0.2rem;
    background-color:#9EEA6A;
}
.tag:before,.tag:after{
    content: " ";
    position: absolute;
    top: 2px;
    right: 100%;
    border: 6px solid transparent;
}
.tag:after{
    right: inherit;
    left: 100%;
    border-right-color: transparent;
    border-left-color: #9EEA6A;
}